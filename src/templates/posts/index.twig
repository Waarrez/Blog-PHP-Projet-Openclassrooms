{% extends "template.twig" %}

{% block title %}Posts{% endblock %}

{% block body %}
    <div class="d-flex flex-column justify-content-center align-items-center mt-5 mb-5">
        <h1>Liste des articles</h1>

        <div class="d-flex justify-content-center align-items-center flex-row mt-5 gap-4 flex-wrap">
            {% for post in posts %}
                <div class="card h-100" style="width: 18rem;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center">{{ post.title }}</h5>
                        <hr>
                        <p class="card-text">{{ post.chapo }}</p>
                        <p class="card-text mt-auto"><b>Derni√®re modification</b> : <br> {{ post.updatedAt|date('Y-m-d') }}</p>
                        <hr>
                        <a href="/post/{{ post.slug }}" class="btn btn-primary mt-auto">Voir le post</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
