<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Blog PHP | {% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/zephyr/bootstrap.min.css">
    </head>
    <body>
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Blog PHP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/posts">Articles</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    {% if isUserLoggedIn %}
                        {% if loggedInUser.isConfirmed == true %}
                            <li class="nav-item">
                                <a href="/dashboard_posts" class="nav-link">Mes articles</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a href="#" class="nav-link">Bienvenue : {{ loggedInUser.username }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-danger" href="/logout">DÃ©connexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link btn" href="/login">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn" href="/register">Inscription</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    {% block body %}
    {% endblock %}

    </body>
</html>
